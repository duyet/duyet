# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files to always be normalized and converted to LF on commit
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sh text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archive files
*.zip binary
*.tar binary
*.gz binary

# Git configuration
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore

# GitHub configuration
.github/ export-ignore

# Diff settings
*.md diff=markdown
*.yml diff=yaml
*.yaml diff=yaml
